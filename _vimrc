set nu
colorscheme murphy
set encoding=utf-8
"
set ruler
"突出显示当前行
set cursorline
"
set magic
" 不要使用vi的键盘模式，而是vim自己的
set nocompatible
" 语法高亮
set syntax=on
" 去掉输入错误的提示声音
set noeb
" 设置匹配模式，显示匹配的括号
set showmatch
" 命令行显示vim当前模式
set showmode
" 命令行显示输入的命令
set showcmd
"
set tabstop=4
"NERDTree
"nnoremap <silent> <F3>>:NERDTree<CR>
